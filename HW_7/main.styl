
title_color = #b9151b;
article_name_color = grey;

.container{
  width: 900px;
  min-height: 700px;
  padding: 20px;
  margin: 0 auto;
  background: linear-gradient( rgba(211,211,211, 0.5) , transparent 1px), linear-gradient( 90deg, #bbb, transparent 1px);
  background-size: 10px 10px;
  background-position: center center;
}

.main_info {
	text-align: center;
	h3 {
	font-size: 12px;
	font-style:italic;
	color: article_name_color;
	margin: 0;
	}
}
.title {
	font-size: 12px;
	text-transform: uppercase;
	color: black;
	font-style: initial;		
		span {
			font-size: (@font-size*2)
			color: title_color;
		}
}
article {
	min-height: 235px;
	width: 180px;
	margin: 10px;
	border: 1px solid grey;
	border-radius: 5px;
	box-shadow: 5px 5px 5px grey;
	text-align: center;
	padding:10px; 
	background: rgba(255,255,255, 0.8);
	float: left;
		a {text-decoration:none;
			color: black;
		}

		h3 {
			font-size: 12px;
			font-style:italic;
			color: article_name_color;
			margin: 0;
		}

		h2 {
			font-size: 12px;
			text-transform: uppercase;
			color: black;
			font-style: initial;
		
			span {
				font-size: (@font-size+2);
			}
		}

		img {
			width:150px;
			height:100px;
			margin-top: -35px;
		}
		p {
			text-align: justify;
			font-size:12px;	
			margin: 5px 0 5px 0;

			span {
			color: title_color;
			}
		}
}

.initial {
	color: title_color;
	display: block;
	float:left;
	text-transform: uppercase;
	font-size:60px;
	font-weight:bold;
	margin -12px 2px 0 0;
}
.fish ul {
	margin: 0;
	padding: 0;
	list-style-type: none;
	text-align: justify;
	
		li {
		font-size:12px;	
		margin: 5px 0 5px 0;
		color: title_color;

			span {
			font-weight: bold;
			}
		}
}
.external {
		clear: both;
			article {
			min-height: 130px;
			}
}

article:hover {
	background: rgba(238, 238, 238, 1);
	}

.articles_title {
	clear: both;
	margin-top: 20px;
	margin-bottom: 20px;
	text-align: center;
	text-transform: uppercase;
	font-size: 12px;
		.parentheses {
		font-size: (@font-size/1.5);
		}
		span {
		color: title_color;
		}
}

.clear {
	clear: both;
}

.logo {
	margin-top: 20px;
	margin-left: -4%;
}
	
footer {
	margin-top:20px;
	padding: 5px;
	text-align: center;
	color: article_name_color;
	font-size: 12px;

		span {
		text-decoration: underline;
		}
}

@media (max-width: 1024px) {
	.container {
	width:600px;
	}
	section {
    display: block;
    overflow: hidden;
    margin: 0 auto;
    width:500px;
    }	
	article {
	width:40%;
	}	
	.logo{
	margin-left: -45%;
	}	
	footer {
	font-size: 10px;
	}
}

@media (max-width: 767px) {
	.container {
	width:400px;
	}
	section {
    display: block;
    overflow: hidden;
    margin: 0 auto;
    width:350px;
    }
	article {
	width:90%;
	box-shadow: 2px 2px 2px grey;
	}
	.logo{
	margin-left:-85%;
	}
}